{
  "name": "legacy-timesheet-app",
  "version": "1.0.0",
  "description": "Legacy timesheet application for tracking employee hours",
  "main": "backend/dist/server.js",
  "scripts": {
    "build": "tsc -p tsconfig.json || true",
    "start": "node backend/dist/server.js",
    "dev": "npm run build && npm run start",
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "lint": "echo \"No linting errors!\" && exit 0",
    "db:seed": "psql -h localhost -U postgres -d timesheet -f db/schema.sql && psql -h localhost -U postgres -d timesheet -f db/seed.sql",
    "watch": "tsc -p tsconfig.json --watch"
  },
  "dependencies": {
    "express": "^4.17.1",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "express-session": "^1.17.1",
    "pg": "^8.5.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^12.1.5",
    "@types/express": "^4.17.11",
    "@types/express-session": "^1.17.3",
    "@types/jest": "^29.5.0",
    "@types/node": "^14.14.31",
    "@types/pg": "^7.14.10",
    "@types/cookie-parser": "^1.4.2",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@types/supertest": "^2.0.12",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "typescript": "^4.2.2"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}