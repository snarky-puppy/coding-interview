{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": ".",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "jsx": "react",
    "lib": ["dom", "es2015", "es2016", "es2017"]
  },
  "include": [
    "frontend/**/*",
    "backend/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}