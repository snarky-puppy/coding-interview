{
  "name": "Legacy Timesheet App",
  "dockerFile": "Dockerfile",
  "forwardPorts": [3000, 5432],
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "extensions": [
    "dbaeumer.vscode-eslint",
    "ms-vscode.vscode-typescript-tslint-plugin"
  ],
  "containerEnv": {
    "DATABASE_URL": "postgres://postgres:postgres@localhost:5432/timesheet"
  },
  "postCreateCommand": "echo 'âœ… Remember to manually seed the database with: npm run db:seed'",
  "remoteUser": "node",
  // Uncomment this to enable debugging
  // "runArgs": [ "--cap-add=SYS_PTRACE", "--security-opt", "seccomp=unconfined" ],
  // This setting is to prevent automatic format on save that could break legacy code formatting
  "customizations": {
    "vscode": {
      "settings": {
        "editor.formatOnSave": false,
        "typescript.tsdk": "node_modules/typescript/lib"
      }
    }
  }
}